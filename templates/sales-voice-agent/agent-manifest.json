{
  "name": "sales-voice-agent",
  "version": "1.0.0",
  "description": "Voice-enabled sales assistant with CRM integration and multi-agent orchestration",
  "template": {
    "id": "copilot-sales-voice",
    "category": "sales",
    "complexity": "high",
    "industries": ["technology", "retail", "financial", "manufacturing"]
  },
  "agents": {
    "required": [
      "core/BasicAgent",
      "memory/ManageMemory",
      "memory/ContextMemory",
      "integrations/Dynamics365CRUD",
      "intelligence/HackerNewsAgent"
    ],
    "optional": [
      "integrations/SharePointExtractor",
      "integrations/TeamsConnector",
      "memory/ConversationHistory",
      "intelligence/MarketResearch"
    ]
  },
  "configuration": {
    "memory_path": "/mnt/azurefiles/memory",
    "shared_memory_path": "/mnt/azurefiles/shared_memories",
    "max_memory_size_mb": 100,
    "retention_days": 90,
    "agent_timeout_seconds": 30,
    "max_conversation_length": 50,
    "voice_settings": {
      "language": "en-US",
      "voice_name": "en-US-JennyNeural",
      "speaking_rate": 1.0,
      "pitch": 0
    }
  },
  "dependencies": {
    "python": "3.9",
    "packages": [
      "requests>=2.28.0",
      "azure-storage-file-share>=12.0.0",
      "azure-identity>=1.12.0",
      "python-dateutil>=2.8.2",
      "pydantic>=1.10.0",
      "aiohttp>=3.8.0"
    ]
  },
  "azure_resources": {
    "required": [
      "Azure Functions",
      "Azure Storage Account",
      "Azure OpenAI Service",
      "Application Insights"
    ],
    "optional": [
      "Azure Speech Services",
      "Azure Key Vault",
      "Dynamics 365 License",
      "SharePoint Online"
    ]
  },
  "environment_variables": {
    "required": [
      "AZURE_OPENAI_ENDPOINT",
      "AZURE_OPENAI_API_KEY",
      "AZURE_OPENAI_API_VERSION",
      "AzureWebJobsStorage",
      "AZURE_FILES_SHARE_NAME"
    ],
    "optional": [
      "DYNAMICS_365_CLIENT_ID",
      "DYNAMICS_365_CLIENT_SECRET",
      "DYNAMICS_365_TENANT_ID",
      "DYNAMICS_365_RESOURCE",
      "SHAREPOINT_CLIENT_ID",
      "SHAREPOINT_CLIENT_SECRET",
      "SPEECH_SERVICES_KEY",
      "SPEECH_SERVICES_REGION"
    ]
  },
  "deployment": {
    "estimated_time_minutes": 10,
    "estimated_monthly_cost": "$100-210",
    "scalability": "Auto-scaling with Azure Functions",
    "regions": [
      "East US",
      "West Europe",
      "Southeast Asia",
      "Australia East"
    ]
  },
  "metadata": {
    "created": "2024-01-15",
    "updated": "2024-01-17",
    "author": "Microsoft AI Accelerate Team",
    "support": "https://github.com/YOUR-USERNAME/AI-AGENT-TEMPLATES/issues",
    "documentation": "https://github.com/YOUR-USERNAME/AI-AGENT-TEMPLATES/wiki/sales-voice-agent"
  }
}
